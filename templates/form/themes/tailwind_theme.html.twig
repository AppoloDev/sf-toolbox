{% use 'form_div_layout.html.twig' %}

{# TODO: Refactor Start #}

{% block input_class %} py-2 px-3 block w-full border border-gray-200 text-sm rounded-lg focus:border-teal-500 focus:ring-teal-500{% endblock %}
{% block input_color_class %} py-1/2 px-1 block border border-gray-200 rounded-lg focus:border-teal-500 focus:ring-teal-500 w-10 h-10 cursor-pointer{% endblock %}
{% block input_error_class %} border-red-500 focus:border-red-500 focus:ring-red-500 outline-red-500{% endblock %}
{% block input_disable_class %} border-stone-300 text-stone-500{% endblock %}

{%- block form_row -%}
    {%- set row_attr = row_attr|merge({ class: row_attr.class|default(row_class|default('')) }) -%}

    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_help(form) -}}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <ul>
            {%- for error in errors -%}
                <li class="text-red-500 mt-2 text-sm">{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}

{%- block form_label -%}
    {% if label is not same as(false) -%}
        {%- set label_attr = label_attr|merge({ class: 'block text-sm font-medium mb-2 ' ~ label_attr.class|default(label_class|default('')) }) -%}
        {% if not valid %}
            {%- set label_attr = label_attr|merge({class: (attr.class|default('') ~ ' block text-sm font-medium mb-2 text-red-500')|trim}) -%}
        {% endif %}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if attr.formName is defined %}
            {% set full_name = attr.formName~'['~name~']' %}
            {% if multiple is defined and multiple %}
                {% set full_name = full_name~'[]' %}
            {% endif %}
            {% set label_attr = label_attr|merge({'for': attr.formName~'['~name~']'}) %}
        {% endif %}

        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
        {{- block('form_label_content') -}}
        </{{ element|default('label') }}>
    {%- endif -%}
{%- endblock form_label -%}

{% block form_widget_simple -%}
    {% if type is not defined or type not in ['file', 'hidden', 'color'] %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ block('input_class'))|trim}) -%}
    {% elseif type is same as('color') %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ block('input_color_class'))|trim}) -%}
    {% endif %}
    {% if not valid %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ block('input_error_class'))|trim}) -%}
    {% endif %}
    {{- parent() -}}
{%- endblock form_widget_simple %}

{% block form_help -%}
    {%- set help_attr = help_attr|merge({class: (help_attr.class|default('') ~ ' ')|trim ~ ' text-sm text-gray-500 mt-2'}) -%}
    {{- parent() -}}
{%- endblock form_help %}

{%- block widget_attributes -%}
    {% if attr.formName is defined %}
        {% set full_name = attr.formName~'['~name~']' %}
        {% set id = attr.formName~'['~name~']' %}
        {% if multiple is defined and multiple %}
            {% set full_name = full_name~'[]' %}
        {% endif %}
    {% endif %}
    {%- set attr = attr|merge({ class: attr.class|default(widget_class|default(block('input_class'))) ~ (disabled ? ' ' ~ widget_disabled_class|default(block('input_disable_class'))) ~ (errors|length ? ' ' ~ widget_errors_class|default(block('input_error_class'))) }) -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block textarea_widget -%}
    <div>
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    </div>
{%- endblock textarea_widget -%}
