{% extends '@SFToolbox/ui/atoms/button/_button.html.twig' %}

{% block button_content %}
    {% if allowDisplay is same as(true) %}
        <button
                type="{{ type }}"
                class="btn btn-{{ size }} btn-{{ color }} btn-{{ mode }} {{ tooltip ? 'hs-tooltip-toggle' }} {{ block ? 'w-full' }}"
                {% if disabled %}disabled{% endif %}
        >
            {{ parent() }}
        </button>
    {% endif %}
{% endblock %}