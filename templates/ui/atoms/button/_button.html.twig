{% if tooltip is defined and tooltip is not null %}<div class="hs-tooltip">{% endif %}

{% block button_content %}
    {% if icon is not null and iconPlacement is same as ('left') %}
        <span class="icon-full">{{ icon|raw }}</span>
    {% endif %}

    {% if label is not null and label is not empty %}
        {{ label }}
    {% endif %}

    {% if icon is not null and iconPlacement is same as ('right') %}
        <span class="icon-full">{{ icon|raw }}</span>
    {% endif %}

    {% if tooltip is defined and tooltip is not null %}
        <span class="tooltip hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible"
              role="tooltip">
    {{ tooltip }}
</span>
    {% endif %}
{% endblock %}

{% if tooltip is defined and tooltip is not null %}</div>{% endif %}