<div class="hs-dropdown dropdownmenu">
    {% if button is not null %}
        {{ button|raw }}
    {% else %}
        {{ component('button', {
            icon: source('@SFToolbox/icons/ellipsis.svg'),
            mode: 'white',
            color: themeColor
        }) }}
    {% endif %}
    <div class="hs-dropdown-menu hs-dropdown-open:opacity-100 opacity-0 duration hidden dropdownmenu-container">
        {% if headerLabel is not null %}
            <div class="py-2 first:pt-0 last:pb-0">
                <span class="block py-2 px-3 text-xs font-medium uppercase text-gray-400">
                    {{ headerLabel }}
                  </span>
            </div>
        {% endif %}

        {% for item in items %}
            {{ item|raw }}
        {% endfor %}
    </div>
</div>