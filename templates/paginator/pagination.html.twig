{% if pageCount > 1 %}
    <div class="inline-flex gap-x-2 justify-end">
        {% if previous is defined %}
            {# TODO: Button component ? #}
            <a
                    href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                    class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-teal-600 transition-all text-sm"
            >
                {{ source('@SFToolbox/icons/prev.svg') }}
                Précédent
            </a>
        {% else %}
            {# TODO: Button component ? #}
            <button type="button" disabled
                    class="cursor-not-allowed py-2 px-3 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-300 shadow-sm text-sm"
            >
                {{ source('@SFToolbox/icons/prev.svg') }}
                Précédent
            </button>
        {% endif %}

        {% if next is defined %}
            {# TODO: Button component ? #}
            <a
                    href="{{ path(route, query|merge({(pageParameterName): next})) }}"
                    class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-teal-600 transition-all text-sm"
            >
                Suivant
                {{ source('@SFToolbox/icons/next.svg') }}
            </a>
        {% else %}
            {# TODO: Button component ? #}
            <button type="button"
                    disabled
                    class="cursor-not-allowed py-2 px-3 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-300 shadow-sm text-sm"
            >
                Suivant
                {{ source('@SFToolbox/icons/next.svg') }}
            </button>
        {% endif %}
    </div>
{% endif %}
